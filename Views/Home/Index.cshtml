@using Microsoft.AspNetCore.Http;

@{
    ViewData["Title"] = "Home Page";
}

@model List<Product>;



<partial name="partial/_DropDown"></partial>

<partial name="partial/_ProductList" model="@Model"></partial>


@section scripts {


    <script>

        $(function () {
            $("#selectBrand").on("change", function () {
                console.log(this.value)

                $("#submitBrand").click()
            })
        })

        function addToCartClicked(itemId) {

           

            $.ajax({
                type: "post",
                url: "Home/AddToCart",
                dataType: 'json',
                data: { itemId: itemId },
                success: function (data) {


                    if (data.status === 200) {

                        $("#cartCount").text(data.total)

                        Swal.fire({
                            position: 'top-end',
                            icon: 'success',
                            title: 'Item added to cart',
                            showConfirmButton: false,
                            timer: 1500
                        })
                    }
                },
                error: function () {
                    console.log("error")
                }
            });
        }




    </script>
}

