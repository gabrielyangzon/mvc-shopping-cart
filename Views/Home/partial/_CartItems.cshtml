@model List<Cart>;


<div class="row">
    <div class="col"><h3>Cart</h3></div>

    <div class="col-3"> <h3>Total Cart Price:  @Model.Sum(x => x.TotalPrice)</h3></div>
</div>

@if (Model.Count != 0)
{
    @foreach (var cartItem in Model)
    {
        <div class="card w-100 mb-1">
            <div class="card-body">
                <div class="card-title">
                    <p hidden>@cartItem.Id</p>
                    <p hidden>@cartItem.ItemId</p>
                    <p>Item name: @cartItem.ItemName</p>
                </div>
                <div class="container">
                    <div class="row">
                        <div class="col">
                            <div class="card-img" style="height:200px ;background-image: url('@cartItem.Thumbnail');"></div>
                        </div>
                        <div class="col">
                            <p>Unit Price : @cartItem.UnitPrice</p>
                        </div>
                        <div class="col">

                            Quantity:<input class="form-control"
                                            type="number"
                                            min="1"
                                            onchange="onQuantityChanged('@cartItem.Id',this)"
                                            value="@cartItem.Quantity" />
                        </div>

                        <div class="col">
                            <p>Total Price : @cartItem.TotalPrice</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    <div class="row">
        <div class="col"></div>
        <div class="col-1"><button class="float-right btn btn-info">Check out</button></div>
    </div>
}
else
{
    <h5>No Items in the cart</h5>
}


<div id="loading" class="spinner-border" role="status" hidden>
    <span class="visually-hidden">Loading...</span>
</div>
